@model TicketApp.BusinessLogic.Implementation.Account.EditUserModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Account</h1>

<hr />
<div class="row">
    <div class="col-md-4 ml-auto mr-auto">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Picture != null)
            {
                <div class="roundPictureContainer" id="registerPictureContainer" style="background:url( data:image/jpeg;base64,@Convert.ToBase64String(Model.Picture) ); background-position: center; background-size: cover"></div>
            }
            else
            {
                <div class="roundPictureContainer" id="registerPictureContainer"></div>
            }
            <div>
                <label asp-for="NewPicture" class="control-label">Profile picture</label>
                <input asp-for="NewPicture" id="userPictureInput" class="pictureInput form-control" value="@Model.NewPicture" class="form-control" accept="image/*" />
                <span asp-validation-for="NewPicture" class="text-danger"></span>
                <input type="hidden" asp-for="PictureId" value="@Model.PictureId" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Details">Back to profile</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script type="module" src="~/js/pictureModules/uploadPictureForUserModule.js"></script>
